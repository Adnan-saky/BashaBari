<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:padding="35sp"
    >
    <ImageView
        android:id="@+id/back_arrow_btn__4"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/arrow_btn" />
    <TextView
        android:id="@+id/centerbox"
        android:layout_width="50sp"
        android:layout_height="500sp"
        android:text="            "
        android:textSize="70sp"
        android:fontFamily="@font/microsoft_himalaya"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="80sp"
        />
    <TextView
        android:id="@+id/registerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="60sp"
        android:fontFamily="@font/microsoft_himalaya"
        android:layout_centerHorizontal="true"
        android:paddingTop="30sp"
        />
    <ImageView
        android:background="@drawable/register_bg"
        android:id="@+id/register_bg"
        android:layout_width="match_parent"
        android:layout_height="470sp"
        android:layout_below="@+id/registerTxt"
        />
    <LinearLayout
        android:layout_below="@+id/registerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25sp"

        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="35sp"
            android:fontFamily="@font/microsoft_himalaya"
            />
        <EditText
            android:id="@+id/reg_name__4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:textSize="25sp"
            android:fontFamily="@font/microsoft_himalaya"
            android:hint="example"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:textSize="35sp"
            android:fontFamily="@font/microsoft_himalaya"
            />

        <EditText
            android:id="@+id/reg_username__4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:textSize="25sp"
            android:fontFamily="@font/microsoft_himalaya"
            android:hint="example"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:(optional)"
            android:textSize="35sp"
            android:fontFamily="@font/microsoft_himalaya"
            />

        <EditText
            android:id="@+id/reg_email__4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:textSize="25sp"
            android:fontFamily="@font/microsoft_himalaya"
            android:hint="example@gmail.com"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:textSize="35sp"
            android:fontFamily="@font/microsoft_himalaya"
            />
        <EditText
            android:id="@+id/reg_pass__4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25sp"
            android:textSize="25sp"
            android:fontFamily="@font/microsoft_himalaya"
            android:inputType="textPassword"
            android:hint="*********"

            />
    </LinearLayout>
    <ImageView
        android:id="@+id/nextbtn__4"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/tick_button" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="35sp"
    >

    <!--:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::-->
    <!--:::::::::::::::::::::::::header::::::::::::::::::::::::::::::::-->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Tenants"
        android:textSize="60sp"
        android:fontFamily="@font/microsoft_himalaya"
        android:layout_centerHorizontal="true"
        android:paddingTop="50sp"
        />

    <!--::::::::::::::::::::::::::::::::::Arrow:::::::::::::::::::::::::::::::-->
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/arrow_btn"
        android:id="@+id/arrow_btn_17"
        />

    <!--::::::::::::::::::::::::::::tenant list:::::::::::::::::::::::::::::::-->
    <LinearLayout
        android:id="@+id/tenant_list"
        android:layout_width="match_parent"
        android:layout_height="450sp"
        android:layout_below="@id/header_text"
        android:padding="35sp"
        android:orientation="vertical"
        android:background="@drawable/rectangle"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recentreq_text"
            android:text="Giorno Giovanna"
            android:fontFamily="@font/microsoft_himalaya"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Johnny Joestar"
            android:fontFamily="@font/microsoft_himalaya"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jotaro Kujo"
            android:fontFamily="@font/microsoft_himalaya"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jouline Coujoh"
            android:fontFamily="@font/microsoft_himalaya"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marie Nathalie"
            android:fontFamily="@font/microsoft_himalaya"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_below="@+id/tenant_list"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/remove_btn" />


</RelativeLayout>
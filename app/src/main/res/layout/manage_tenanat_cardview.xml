<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="8dp">



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_mng_tenants"
                android:text="Giorno Giovanna"
                android:fontFamily="@font/microsoft_himalaya"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="32sp"
                />

            <TextView
                android:id="@+id/phone_mng_tenants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_mng_tenants"
                android:text="0154679416454"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:paddingVertical="6dp"
                android:paddingLeft="30dp"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg"

    >

    <!--::::::::::::::::::::::::::Menu Screen::::::::::::::::::::::::::-->
    <LinearLayout
        android:layout_width="280sp"
        android:layout_height="match_parent"
        android:background="@drawable/menu_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:fontFamily="@font/futura_md_cn_bt"
            android:textSize="50sp"
            android:paddingTop="80sp"
            android:paddingBottom="50sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Tenant"
            android:fontFamily="@font/futura_md_bt"
            android:textSize="30sp"
            android:padding="20sp"
            android:textColor="@android:color/holo_blue_dark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notices"
            android:fontFamily="@font/futura_md_bt"
            android:textSize="30sp"
            android:padding="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Tenant"
            android:fontFamily="@font/futura_md_bt"
            android:textSize="30sp"
            android:padding="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Bills"
            android:fontFamily="@font/futura_md_bt"
            android:textSize="30sp"
            android:padding="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:fontFamily="@font/futura_md_bt"
            android:textSize="30sp"
            android:padding="20sp"
            />


    </LinearLayout>

    <!--::::::::::::::::::::::::::Home Screen::::::::::::::::::::::::::-->
    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:padding="35sp"

        >
        <!--::::::::::::::::::::::::::Menu Button::::::::::::::::::::::::::-->
        <ImageView
            android:id="@+id/menu_btn_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/menu_btn" />

        <!--::::::::::::::::::::::::::Owner text:::::::::::::::::::::::::::-->
        <ImageView
            android:id="@+id/owner_profile_pic"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/ownertext"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_pic" />

        <!--:::::::::::::::::::::::::::Profile picture;:::::::::::::::::::::-->
        <ImageView
            android:id="@+id/info_bg"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_below="@+id/adress_text"
            android:src="@drawable/home_info_bg" />

        <!--:::::::::::::::::::::::::::::Name::::::::::::::::::::::::::::::-->
        <ImageView
            android:id="@+id/reqst_bg"
            android:layout_width="270dp"
            android:layout_height="130dp"
            android:layout_below="@+id/recentreq_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rectangle" />

        <!--:::::::::::::::::::::::::::::Address:::::::::::::::::::::::::::::-->
        <ImageView
            android:layout_width="101dp"
            android:layout_height="39dp"
            android:layout_below="@+id/reqst_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/see_more_btn" />

        <!--:::::::::::::::::::::::::::::info in home:::::::::::::::::::::::::::::-->
        <LinearLayout
            android:id="@+id/info_nos"
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_below="@+id/adress_text"
            android:gravity="center_horizontal"

            android:paddingTop="3sp">

            <TextView
                android:id="@+id/tenant_no"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:fontFamily="@font/microsoft_himalaya"
                android:gravity="center_horizontal"
                android:text="45"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/notice_no"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:fontFamily="@font/microsoft_himalaya"
                android:gravity="center_horizontal"
                android:text="25"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_below="@+id/info_nos"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tenant_text"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futura_md_bt"
                android:gravity="center_horizontal"
                android:text="Tenants"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notice_text"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futura_md_bt"
                android:gravity="center_horizontal"
                android:text="Notices"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ownertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_bt"
            android:paddingBottom="20sp"
            android:text="Owner"
            android:textSize="20sp" />

        <!--:::::::::::::::::::::recent request text::::::::::::::::::::::::-->
        <TextView
            android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_profile_pic"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_bt"
            android:paddingTop="10sp"
            android:text="Joseph Joestar"
            android:textSize="30sp" />
        <!--:::::::::::::::::::::request background::::::::::::::::::::::::-->
        <TextView
            android:id="@+id/adress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_bt"
            android:paddingBottom="20sp"
            android:text="Mirpur, Dhaka"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recentreq_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_bg"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_cn_bt"
            android:padding="35sp"
            android:text="RECENT REQUESTS"
            android:textSize="28sp" />

        <!--:::::::::::::::::::::request contents::::::::::::::::::::::::-->
        <TextView
            android:id="@+id/reqst_tenant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recentreq_text"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/microsoft_himalaya"
            android:paddingTop="15sp"
            android:text="Marie Nathalie"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/reqst_text_content"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reqst_tenant_name"
            android:layout_centerHorizontal="true"
            android:text="My shower is broken, i cant do anything. please fix asap"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>
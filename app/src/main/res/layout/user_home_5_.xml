<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35sp">
    <!--::::::::::::::::::::::::::Menu Button::::::::::::::::::::::::::-->
    <ImageView
        android:id="@+id/menu_btn_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/menu_btn" />

        <!--::::::::::::::::::::::::::tenat text:::::::::::::::::::::::::::-->
        <TextView
            android:id="@+id/ownertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_bt"
            android:paddingBottom="20sp"
            android:text="Tenant"
            android:textSize="20sp" />
        <!--:::::::::::::::::::::::::::Profile picture;:::::::::::::::::::::-->
        <ImageView
            android:id="@+id/owner_profile_pic"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@+id/ownertext"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_pic" />

        <!--:::::::::::::::::::::tenant name::::::::::::::::::::::::-->
        <TextView
            android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_profile_pic"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_bt"
            android:paddingTop="10sp"
            android:text="Elizabeth Olsen"
            android:textSize="30sp" />
        <!--:::::::::::::::::::::Address::::::::::::::::::::::::-->
        <TextView
            android:id="@+id/adress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_bt"
            android:paddingBottom="20sp"
            android:text="Mirpur, Dhaka"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/info_bg"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_below="@+id/adress_text"
            android:src="@drawable/home_info_bg" />
        <LinearLayout
            android:id="@+id/info_nos"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@+id/adress_text"
            android:gravity="center_horizontal"
            android:paddingTop="10sp">

            <TextView
                android:id="@+id/tenant_no"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:fontFamily="@font/microsoft_himalaya"
                android:gravity="center_horizontal"
                android:text="3"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/notice_no"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:fontFamily="@font/microsoft_himalaya"
                android:gravity="center_horizontal"
                android:text="38"
                android:textSize="40sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_below="@+id/info_nos"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tenant_text"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futura_md_bt"
                android:gravity="center_horizontal"
                android:text="Due bills"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notice_text"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametext"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futura_md_bt"
                android:gravity="center_horizontal"
                android:text="Notices"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/recentreq_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_bg"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_cn_bt"
            android:padding="35sp"
            android:text="RECENT "
            android:textSize="28sp" />

    </RelativeLayout>
</LinearLayout>